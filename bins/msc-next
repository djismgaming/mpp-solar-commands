#!/bin/bash

# Default values
file=""
flag=false
count=0

# Function to display usage
function usage {
    echo "Usage: script.sh [-f <file>] [-c <count>] [-h]"
    echo "Options:"
    echo "  -f <file>   Specify a file"
    echo "  -c <count>  Specify a count"
    echo "  -h          Display this help message"
    exit 1
}

# Parse command line options
while getopts ":f:c:h" opt; do
    case ${opt} in
        f)
            file=$OPTARG
            ;;
        c)
            count=$OPTARG
            ;;
        h)
            usage
            ;;
        :)
            echo "Error: Option -$OPTARG requires an argument."
            usage
            ;;
        \?)
            echo "Error: Invalid option -$OPTARG."
            usage
            ;;
    esac
done

# Perform actions based on options
if [ ! -z "$file" ]; then
    echo "File: $file"
fi

if [ "$count" -gt 0 ]; then
    echo "Count: $count"
fi

# Rest of your script...
